<style type="text/css">
    .doc-header {
        position: absolute;
        top: 0px;
        left: 0px;
        right: 0px;
    }

    .doc-header .navigation {
        border-top: medium none;
        background: #F5F5F5;
    }
</style>

<div class="doc-header">
    <ul class="navigation">
        <li class="active">
            <a href="/my/resource">
                <span class="fa fa-home"></span>
            </a>
        </li>
        <li>
            <a href="/my/resource/import">
                <span class="fa fa-download"></span>
            </a>
        </li>
    </ul>
</div>

<script type="text/javascript">
    jQuery(function($) {
        $('.doc-header .navigation li').removeClass('active')
        $('.doc-header .navigation li a').each(function() {
            if(window.location.pathname == $(this).attr('href')) {
                $(this).parent().addClass('active')
            }
        });
    });
</script>