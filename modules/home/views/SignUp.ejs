<% layout('layout/simple') -%>

<style type="text/css">
    .form-control { margin-bottom: 10px; }
</style>

<div class="col-xs-12 col-sm-12 col-md-4 well well-sm">
    <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Register</h3>
        </div>
        <div class="panel-body">
            <form id="addUser" role="form" class="form" method="POST" action="/signup">
                <fieldset>
                    <div class="row">
                        <div class="col-xs-6 col-md-6">
                            <input class="form-control" placeholder="Firstname" name="firstname" type="text" autofocus="">
                        </div>
                        <div class="col-xs-6 col-md-6">
                            <input class="form-control" placeholder="Lastname" name="lastname" type="text">
                        </div>
                    </div>
                    <input class="form-control" placeholder="Email" name="email" type="text">
                    <input class="form-control" placeholder="Phone" name="phone" type="text">
                    <input class="form-control" placeholder="Username" name="username" type="text">
                    <input class="form-control" placeholder="Password" name="password" type="password" value="">

                    <input type="submit" class="btn btn-sm btn-success" value="Login" />
                </fieldset>
            </form>
        </div>
    </div>
</div>